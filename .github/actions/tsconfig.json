{
  "include": [ "**/*.ts" ],
  "compilerOptions": {
    "rootDir": ".",

    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES2019"],
    "forceConsistentCasingInFileNames": true,
    "newLine": "lf",

    "noImplicitReturns": true,
    "strict": true,
    "useDefineForClassFields": true
  }
}
